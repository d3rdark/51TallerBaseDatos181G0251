<Application x:Class="Eje3Agenda.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Eje3Agenda"
             StartupUri="Views/AgendaView.xaml">
    <Application.Resources>
        <Style TargetType="ListBox" x:Key="lststyle">
            <Setter Property="Margin" Value="10px 10px 10px 5px"/>
            <Setter Property="FontSize" Value="15px"/>
            <Setter Property="Padding" Value="15px"/>
            <Setter Property="Width" Value="180px"/>
            <Setter Property="Background" Value="#FFD765"/>
            <Setter Property="Foreground" Value="#274F60"/>
        </Style>
        <Style TargetType="Button" x:Key="btns">
            <!--<Setter Property="FontSize" Value="15px"/> -->
            <Setter Property="Margin" Value="10px 0px"/>
            <Setter Property="Padding" Value="20px 5px"/>
            <Setter Property="Background" Value="#199554"/>
            <Setter Property="Foreground" Value="#FCFDFD"/>
        </Style>
        <Style TargetType="StackPanel" x:Key="Papel">
            
        </Style>
    </Application.Resources>
</Application>
